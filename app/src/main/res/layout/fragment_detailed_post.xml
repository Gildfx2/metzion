<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.pre_alpha.main.DetailedPostFragment">
    <ImageView
        android:id="@+id/return_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_back"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:text="שליחת הודעה"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:id="@+id/send_message"
        android:textColor="@color/brown"
        android:fontFamily="@font/rubik_medium"
        android:background="@drawable/custom_button2"
        app:backgroundTint="@null"
        />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/post_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:layout_gravity="right"
            android:textSize="40sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="שם הפוסט" />
        <TextView
            android:id="@+id/post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:text="dd/mm/yyyy"
            android:textSize="15sp"
            android:fontFamily="@font/rubik_regular" />
        <TextView
            android:id="@+id/post_address"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:fontFamily="@font/rubik_medium_italic" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_image"
                android:layout_width="260dp"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/default_image" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/post_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:text="סוג החפץ" />
        <TextView
            android:id="@+id/post_about"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="right"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:text="אודות החפץ" />
    </LinearLayout>


</FrameLayout>