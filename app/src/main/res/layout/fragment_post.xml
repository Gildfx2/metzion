<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreatePostFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="30dp"
            android:fontFamily="@font/rubik_medium"/>
        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#C8C8C8"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם החפץ"
            android:textSize="20dp"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:helperText="יופיע בכותרת המודעה שלך"
            app:helperTextEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:endIconMode="clear_text"
            app:boxStrokeErrorColor="#6f1d1b"
            app:boxStrokeColor="@color/brown"
            app:hintTextColor="@color/black"
            app:helperTextTextColor="@color/black"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="עד שלושים תווים"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חפץ"
            android:textSize="20dp"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            android:id="@+id/item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="בחירת חפץ"
            app:helperTextEnabled="true"
            app:helperText=""
            app:boxStrokeColor="@color/brown"
            app:hintTextColor="@color/black"
            app:helperTextTextColor="@color/black">
            <AutoCompleteTextView
                android:id="@+id/list_of_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:fontFamily="@font/rubik_regular"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ישוב"
            android:textSize="20dp"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="בחירת ישוב"
            app:boxStrokeColor="@color/brown"
            app:hintTextColor="@color/black"
            app:helperTextTextColor="@color/black"
            app:helperTextEnabled="true"
            app:helperText="">
            <AutoCompleteTextView
                android:id="@+id/list_of_areas"
                android:fontFamily="@font/rubik_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="טקסט חופשי"
            android:textSize="20dp"
            android:fontFamily="@font/rubik_regular"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="400"
            app:boxStrokeErrorColor="#6f1d1b"
            app:boxStrokeColor="@color/brown"
            app:hintTextColor="@color/black"
            app:hintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/about"
                android:hint="הכנס טקסט כאן"
                android:textColor="@color/black"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:fontFamily="@font/rubik_regular"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="הבא"
            android:textSize="20sp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik_regular"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            />
    </LinearLayout>

</FrameLayout>