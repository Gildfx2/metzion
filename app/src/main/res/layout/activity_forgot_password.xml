<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical">
    <ImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:src="@drawable/login2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="איפוס סיסמה"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_medium"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/שכחתי_סיסמה"
        android:fontFamily="@font/rubik_regular"
        android:textSize="18sp"
        android:textColor="@color/black"
        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:hint="@string/כתובת_אימייל"
        app:helperTextEnabled="true"
        app:helperText=""
        android:id="@+id/layoutEmail3"
        app:helperTextTextColor="@color/black"
        app:boxStrokeErrorColor="#6f1d1b"
        app:boxStrokeColor="#8a5d3d"
        app:hintTextColor="@color/black"
        app:startIconDrawable="@drawable/baseline_email_24">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="אפס סיסמה"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="resetPassword"
        android:fontFamily="@font/rubik_medium"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="חזור למסך התחברות"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="10dp"
        android:onClick="loginScreen"
        android:textColor="#8a5d3d"
        android:fontFamily="@font/rubik_medium"
        android:background="@drawable/custom_button2"
        app:backgroundTint="@null"
        />

</LinearLayout>